{
    "version": "2.0.0",
    "tasks": [
        // Compilation
        {
            "label": "cmake & make",
            "type": "shell",
            "command": "cd ../../build && cmake -DCMAKE_BUILD_TYPE=Release -DDISABLE_WASM_SPEC_TESTS=yes .. && make -j $(nproc)",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "statusbar": {
                    "label": "$(diff-insert) Cmake & make",
                    "tooltip": "Does cmake and make"
                }
            }
        },
        {
            "label": "make & install",
            "type": "shell",
            "command": "cd ../../build && make -j $(nproc) && make install",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "statusbar": {
                    "label": "$(diff-insert) Make & Install",
                    "tooltip": "Does a make and make install"
                }
            }
        },
        {
            "label": "install & test",
            "type": "shell",
            "command": "cd ../../build && make install && cd /root/system-epn/build && cltester -v artifacts/test-system_epn.wasm [Nodeos] -s ",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "statusbar": {
                    "label": "$(diff-insert) Install & test",
                    "tooltip": "Installs new nodeos and runs the test nodeos test suite"
                }
            }
        },
    ]
}